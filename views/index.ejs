<%- include("partials/header.ejs") %>
<h1 class="title">Blog App</h1>
<form action="/create-post" method="POST" class="new-post-form">
  <input type="text" name="title" placeholder="Title" required />
  <input type="text" name="subtitle" placeholder="Subtitle" required />
  <textarea name="content" placeholder="Content" required></textarea>
  <button type="submit">Submit</button>
</form>
<ul class="post-array">
  <% for (var i = numItems - 1; i >= 0; i--) { %>
  <li>
    <h2 class="post-title"><%= titleArray[i] %></h2>
    <h3 class="post-subtitle"><%= subTitleArray[i] %></h3>
    <h2 class="post-text"><%= contentArray[i] %></h2>
  </li>
  <% } %>
</ul>
<%- include("partials/footer.ejs") %>
